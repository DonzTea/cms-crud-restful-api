    "/api/users": {
      "post": {
        "tags": ["Admin"],
        "summary": "Create user",
        "description": "Create a new user.",
        "operationId": "CreateUser",
        "security": [
          {
            "httpBearer": []
          }
        ],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              },
              "example": {
                "name": "doniPM",
                "username": "doniPM",
                "email": "doniPM@gmail.com",
                "password": "12345678",
                "roles": ["PM"]
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "user created"
          },
          "400": {
            "description": "required request body is missing, does not meet standards, or duplicate account were found"
          },
          "403": {
            "description": "no token provided or not an admin"
          },
          "500": {
            "description": "authentication failed or server error"
          }
        },
        "deprecated": false
      },
      "get": {
        "tags": ["Public", "Admin", "PM", "User"],
        "summary": "Read users",
        "description": "Get all users.",
        "operationId": "ReadUsers",
        "responses": {
          "200": {
            "description": "read users success"
          },
          "500": {
            "description": "server error"
          }
        },
        "deprecated": false
      }
    },
    "/api/users/{user_id}": {
      "get": {
        "tags": ["Public", "Admin", "PM", "User"],
        "summary": "Read user",
        "description": "reading a user data with specifying id as request header.",
        "operationId": "ReadUser",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "id of a user",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "read user detail success"
          },
          "400": {
            "description": "no param id provided"
          },
          "404": {
            "description": "user not found"
          },
          "500": {
            "description": "server error"
          }
        },
        "deprecated": false
      },
      "put": {
        "tags": ["Admin", "Owner"],
        "summary": "Update user",
        "description": "update user data with specifying id as request header.",
        "operationId": "UpdateUser",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "id of a user",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "security": [
          {
            "httpBearer": []
          }
        ],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserRequest"
              },
              "example": {
                "name": "doni PM",
                "username": "DoniPM",
                "email": "doniiPM@gmail.com",
                "password": "donipm$$"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "user updated"
          },
          "400": {
            "description": "no param id provided, required request body is missing, does not meet standards, duplicate account were found, or intended to delete superadmin"
          },
          "403": {
            "description": "no token provided, not an admin, or not an owner"
          },
          "500": {
            "description": "authentication failed or server error"
          }
        },
        "deprecated": false
      },
      "delete": {
        "tags": ["Admin", "Owner"],
        "summary": "Delete user",
        "description": "delete a user with specifying id as request header.",
        "operationId": "DeleteUser",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "id of a user",
            "schema": {
              "type": "integer",
              "minimum": 1
            }
          }
        ],
        "security": [
          {
            "httpBearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "user deleted"
          },
          "400": {
            "description": "no param id provided or intended to delete superadmin"
          },
          "403": {
            "description": "no token provided, not an admin, or not an owner"
          },
          "500": {
            "description": "authentication failed or server error"
          }
        },
        "deprecated": false
      }
    },
