  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Public"],
        "summary": "Signup",
        "description": "Register user's account.",
        "operationId": "Signup",
        "consumes": ["application/json"],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              },
              "example": {
                "name": "doni",
                "username": "doni",
                "email": "doni@gmail.com",
                "password": "12345678",
                "passwordConfirmation": "12345678"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "account successfully registered"
          },
          "400": {
            "description": "required request body is missing, does not meet standards, or duplicate account were found"
          },
          "500": {
            "description": "server error"
          }
        },
        "deprecated": false
      }
    },
    "/api/auth/signin": {
      "post": {
        "tags": ["Public"],
        "summary": "Signin",
        "description": "Login user's account into system.",
        "operationId": "Signin",
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SigninRequest"
              },
              "example": {
                "username": "admin",
                "password": "12345678"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "login success"
          },
          "400": {
            "description": "required request body is missing or does not meet standards"
          },
          "401": {
            "description": "invalid password"
          },
          "404": {
            "description": "user not found"
          },
          "500": {
            "description": "server error"
          }
        },
        "deprecated": false
      }
    },
